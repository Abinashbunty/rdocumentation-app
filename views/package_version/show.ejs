<%- partial ('../shared/_navbar.ejs') %>
<% var pkgVersion = data; %>
<section class="package">
  <div class="container">
    <header>
      <h1><%- pkgVersion.package_name %></h1>

      <select id="packageVersionSelect">
        <% for(var i = 0; i < pkgVersion.package.versions.length; i++) { %>
          <option data-uri="<%= pkgVersion.package.versions[i].uri %>"
            value="<%= pkgVersion.package.versions[i].version %>"
            <%= (pkgVersion.package.versions[i].version === pkgVersion.version) ? 'selected' : '' %> >
            <%= pkgVersion.package.versions[i].version %>
          </option>
        <% } %>
      </select>


      <div class="rating" title=<%= pkgVersion.rating %>>

        <% if (pkgVersion.rating) { %>
         <% for(var i=1; i <= 5; i++) { %>
            <i class="fa fa-star<%=
            pkgVersion.rating < i ?
              pkgVersion.rating <= i - 0.5 ? "-o" : "-half-o"
              : ""
            %>" aria-hidden="true"></i>
          <% } %>
        <% } %>
          <span>(<%= pkgVersion.reviews.length %> votes)</span>
      </div>


      <div class="package--review pull-right" >
        <% if(!inViewerPane) { %>
          <a href="javascript:;" onclick="document.location.hash='postReview';" class="btn btn-primary">Review Package</a>
        <% } else { %>
          <a href="<%= path + '#postReview' %>" class="btn btn-primary js-external">Review Package</a>
        <% } %>
      </div>
    </header>

    <section class="package--stats">
      <div class="row">
        <div class="col-sm-8">
          <dl>
            <% if (pkgVersion.maintainer) { %>
            <dt>Maintainer:</dt>
            <dd><a href="<%= pkgVersion.maintainer.uri %>">
              <%= pkgVersion.maintainer.name %></a></dd>
            <% } %>
            <dt>Contributors:</dt>
            <dd>
            <% for(var i = 0; i < pkgVersion.collaborators.length; i++) { %>
              <a href="<%= pkgVersion.collaborators[i].uri %>"><%= pkgVersion.collaborators[i].name %></a>
            <% } %>
            </dd>
          </dl>
        </div>
        <div class="col-sm-4">
          <div class="package--downloads">
            <span class="package--downloads-nr"><span id="totalDownloads" data-url="/api<%= path %>/downloads"></span><span>Downloaded this month</span></span>
            <span class="package--downloads-ind">Packages depending on this package were downloaded <span id="indDownloads"></span> times this month.</span>
            <span class="package--downloads-credits">Download stats provided by <a href="http://cranlogs.r-pkg.org/" target="_blank">MetaCran</a></span>
          </div>
        </div>
      </div>
    </section>

    <section class="package--info">
      <h4><%- pkgVersion.title %></h4>
      <p><%- pkgVersion.description %></p>
    </section>

    <section class="package--topics">
      <input id="filterTopics" type="text" placeholder="Filter list">
      <table>
        <thead>
          <tr>
            <td>Name</td>
            <td>Description</td>
            <td width="115">Rating</td>
          </tr>
        </thead>
        <tbody id="topics">
          <% for(var i = 0; i < pkgVersion.topics.length; i++) { %>
            <tr>
              <td><a href="<%= pkgVersion.topics[i].uri %>"><%= pkgVersion.topics[i].name %></a></td>
              <td><%- pkgVersion.topics[i].title %></td>
              <td>
                <div class="rating">
                  <i class="fa fa-star-o" aria-hidden="true"></i>
                  <i class="fa fa-star-o" aria-hidden="true"></i>
                  <i class="fa fa-star-o" aria-hidden="true"></i>
                  <i class="fa fa-star-o" aria-hidden="true"></i>
                  <i class="fa fa-star-o" aria-hidden="true"></i>
                </div>
              </td>
            </tr>
          <% } %>
          <tr class="no-results"><td colspan="3">No Results!</td></tr>
        </tbody>
      </table>
    </section>

    <section class="package--dependencies">
      <h4>Dependencies</h4>
      <ul class="inline">
        <% for(var i = 0; i < pkgVersion.dependencies.length; i++) { %>
          <li><a href="<%= pkgVersion.dependencies[i].uri %>"><%= pkgVersion.dependencies[i].name %></a></li>
        <% } %>
      </ul>
    </section>


    <%- partial ('../shared/_review.ejs') %>


  </div>
</section>

<%- partial ('../shared/_footer.ejs') %>
