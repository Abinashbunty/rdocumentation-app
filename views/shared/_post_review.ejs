<% var reviewable = data; %>
<% var reviews = reviewable.reviews; %>

<div class='reviews'>
  <h3>Reviews</h3>
  <div class="review-content">
    <% if(reviews.length === 0) { %>
      <div class="review--placeholder">Looks like there are no reviews yet.</div>
    <% } %>
    <% for(var i=0; i < reviews.length; i++) { %>
      <% var reviewUser = reviews[i].user; %>
      <% var reviewTarget = null; %>
      <%- include _review.ejs %>
    <% } %>
  </div>
  <% if(!inViewerPane) { %>
    <% if(user) { %>
      <div id="postReview" class="review--form">
        <div class="review--form-title">Post a new review</div>
        <div class="review--form-body">
          <form method="post" action='<%= reviewPostAction %>'>
            <label>Score</label>
            <span class="review--form-rating">
              <input type="radio" class="rating-input" id="rating-5" name="rating" value="5">
              <label for="rating-5" class="star"></label>
              <input type="radio" class="rating-input" id="rating-4" name="rating" value="4">
              <label for="rating-4" class="star"></label>
              <input type="radio" class="rating-input" id="rating-3" name="rating" value="3" checked>
              <label for="rating-3" class="star"></label>
              <input type="radio" class="rating-input" id="rating-2" name="rating" value="2" >
              <label for="rating-2" class="star"></label>
              <input type="radio" class="rating-input" id="rating-1" name="rating" value="1">
              <label for="rating-1" class="star"></label>
            </span>
            <fieldset>
              <label for="title">Title</label>
              <input name='title' id="title" placeholder="(optional)"></input>
            </fieldset>
            <fieldset>
              <label for="text">Review</label>
              <textarea name='text' rows="4" cols="20" id="text" placeholder="(optional)"></textarea>
            </fieldset>
            <fieldset>
              <button class="btn btn-primary" type="submit">Send your review</button>
            </fieldset>
          </form>
        </div>
      </div>
    <% } else { %>
        <p>You are not logged in, please <a href="/login">Sign in</a> or <a href="/register">Create an account</a> to post reviews.</p>
    <% } %>
  <% } else { %>
    <a href="<%= path + '#postReview' %>" class="btn btn-primary js-external">Review Package</a>
  <% } %>
</div>
